<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background11"
    android:orientation="vertical"
    tools:context=".First_Page">


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
    android:layout_marginTop="100dp"
      android:text="Where do you want "
      android:textColor="@color/cardview_dark_background"
      android:textSize="30dp"/>
  <ImageView
      android:layout_width="61dp"
      android:layout_height="48dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="-41dp"
      android:src="@drawable/mu" />

  <TextView
      android:layout_width="337dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"

      android:text="to go With ATHAR?"
      android:textColor="@color/black"
      android:textSize="30dp"
      android:typeface="serif" />

  <TextView
      android:layout_width="253dp"
      android:layout_height="158dp"
      android:layout_marginLeft="150dp"
      android:layout_marginTop="90dp"

      android:backgroundTintMode="screen"
      android:text="@string/firstT"
      android:textColor="@color/black"
      android:textSize="16dp"
      android:typeface="serif" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text=""
     />

  <ImageButton
      android:id="@+id/nextINfirstPage"
      android:layout_width="67dp"
      android:layout_height="49dp"
      android:layout_marginLeft="300dp"
      android:layout_marginTop="5dp"

      android:background="@drawable/arrow" />

  <TextView
      android:layout_width="68dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="255dp"
      android:layout_marginTop="-40dp"
      android:backgroundTintMode="screen"
      android:text="Start"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:typeface="serif" />

</LinearLayout>
